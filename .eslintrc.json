{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "_": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    },
    "extends": ["airbnb"],
    "rules": {
        "jsx-quotes": [2, "prefer-double"],
        "quotes": [2, "single"],
        "no-console": ["error", {
            "allow": ["log", "warn", "error"]
        }],
        "react/prop-types": 1,
        "react/no-find-dom-node": 0,
        "react/jsx-no-literals": 1,
        "semi": [2, "always"],
        "key-spacing": [2, {
            "align": "colon"
        }],
        "no-underscore-dangle":  "off",
        "func-names": 0
    }
}